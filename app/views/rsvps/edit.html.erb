<%= render partial: "./nav" %>

<header>
  <h1>RSVP for <%= link_to @party.name, party_path(@party) %></h1>
</header>
<section>
  <div id="rsvp_edit_form">
    <%= form_for [@party, @rsvp] do |f| %>
      <div><%= f.radio_button :status, :yes %> <%= f.label :status, "Attending" %></div>
      <div><%= f.radio_button :status, :pending %> <%= f.label :status, "Maybe attending" %></div>
      <div><%= f.radio_button :status, :no %> <%= f.label :status, "Not attending" %></div>
      <div><%= f.submit "Submit your RSVP" %></div>
    <% end %>
  </div>
</section>