<%= render partial: "./nav" %>

<h3>Party: <%= link_to @party.name %></h3>

<div id='query_form'>
  <%= form_tag({controller: "parties", action: "query_results"}, method: "get") do %>
    <p><%= label_tag :query, "What do you want to cook?" %></p>
    <p><%= text_field_tag :query, nil, placeholder: "Examples: Onion Soup, Chicken, etc." %></p>
    <p><%= submit_tag("Search for recipes") %></p>
  <% end %>
</div>