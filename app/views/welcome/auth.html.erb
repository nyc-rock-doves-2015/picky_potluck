<%= render partial: "./signed_out_nav" %>

<div class="page-container">
  <div class="enter-form">
    <h1 class="picky-potluck">Picky Potluck</h1>
    <div id = "signin-form">
      <h1>Sign In</h1>
      <%= form_for :session, url: session_path do |f| %>
          <div><%= flash[:error] %></div>
          <div><%= f.label :email %></div>
          <div><%= f.text_field :email, :required => true %></div>

          <div><%= f.label :password %></div>
          <div><%= f.password_field :password, :required => true  %></div>

          <div><%= f.submit "Sign In"%></div>
      <% end %>
    </div>

    <div id="signup-form">
      <h1>Sign Up</h1>
      <%= form_for(@user) do |f| %>
          <div><%= flash[:notice] %></div>
          <div><%= f.label :name %></div>
          <div><%= f.text_field :name, :required => true %></div>

          <div><%= f.label :email %></div>
          <div><%= f.text_field :email, :required => true %></div>

          <div><%= f.label :password %></div>
          <div><%= f.password_field :password, :required => true %></div>

          <div><%= f.label :password_confirmation %></div>
          <div><%= f.password_field :password_confirmation, :required => true %></div>

          <div><%= f.submit "Create Account!" %></div>
      <% end %>
    </div>
  </div>
</div>